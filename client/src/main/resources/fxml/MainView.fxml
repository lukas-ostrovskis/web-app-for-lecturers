<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="animatedGradientVBox" alignment="CENTER" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.MainViewController">

    <VBox id="opaqueBackgroundVBox" alignment="CENTER" prefHeight="296.0" prefWidth="247.0" spacing="25">
        <padding><Insets bottom="25" left="0" right="0" top="25" /></padding>

        <HBox alignment="CENTER" spacing="10">

            <Label text="I'm a" />

            <Button fx:id="identityButton" onAction="#identityButtonPressed" text="Student" />

        </HBox>

        <GridPane fx:id="dataFieldsGridPane" alignment="CENTER" hgap="10" prefHeight="145.0" prefWidth="247.0" vgap="25">
            <Label fx:id="emailLabel" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

            <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label fx:id="usernameLabel" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

            <TextField fx:id="userNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label fx:id="roomIdLabel" text="Room ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

            <TextField fx:id="roomIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label fx:id="passwordLabel" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>

        </GridPane>

        <HBox alignment="CENTER">
         <Button fx:id="createRoomButton" mnemonicParsing="false" onAction="#createRoomButtonPressed" text="Create Room" />

            <Button fx:id="joinRoomButton" text="Join Room" onAction="#joinRoomButtonPressed"/>

        </HBox>
    </VBox>
</VBox>
