<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.shape.Rectangle?>
<VBox   xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="nl.tudelft.oopp.app.controllers.RoomViewController"
        stylesheets="@../css/app.css"
        id="staticGradientVBox"
        alignment="CENTER"
        spacing="25">
        <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>


    <HBox   spacing="25">

        <VBox   spacing="25">

            <HBox   spacing="25">

                <Label  text="Room ID: (room ID here)"/>

                <Button text="Leave Room"
                        onAction="#leaveRoomButtonPressed"/>

            </HBox>

            <Button text="End Lecture (for lecturers)"
                    onAction="#endLectureButtonPressed"/>

            <Label  text="You're a (student / moderator / lecturer)"/>

            <Label  text="Lecture: (lecture title, e.g. CSE1200)"/>

        </VBox>

        <VBox   alignment="TOP_RIGHT"
                spacing="25">

            <HBox   alignment="TOP_RIGHT"
                    spacing="25">

                <Button     text="Remove"
                            onAction="#removeQuestionButtonPressed"/>

                <Button     text="Upvote"
                            disable="true"/>

                <Button     text="Downvote"
                            disable="true"/>

                <Button     text="Mark As Answered"
                            disable="true"/>

            </HBox>

            <HBox   alignment="CENTER"
                    spacing="25">

                <TextField  prefWidth="400"/>

                <Button text="Ask Question"
                        onAction="#askQuestionButtonPressed"/>

            </HBox>

        </VBox>

    </HBox>

    <ListView   fx:id="questionsListView"
                maxWidth="Infinity"
                maxHeight="Infinity"/>

    <Rectangle  width="750"
                height="200"
                fill="snow"
                arcWidth="10"
                arcHeight="10"/>

</VBox>
