<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox id="staticGradientVBox" alignment="CENTER" spacing="25" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.RoomViewController">
        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>


    <HBox spacing="25">

        <VBox spacing="25">

            <HBox spacing="25">

                <Label text="Room ID: (room ID here)" />

                <Button onAction="#leaveRoomButtonPressed" text="Leave Room" />

            </HBox>

            <Button onAction="#endLectureButtonPressed" text="End Lecture (for lecturers)" />

            <Label text="You're a (student / moderator / lecturer)" />

            <Label text="Lecture: (lecture title, e.g. CSE1200)" />

        </VBox>

        <VBox alignment="TOP_RIGHT" spacing="25">

            <HBox alignment="TOP_RIGHT" spacing="25">

                <Button onAction="#removeQuestionButtonPressed" text="Remove" />

                <Button disable="true" text="Upvote" />

                <Button disable="true" text="Downvote" />

                <Button disable="true" text="Mark As Answered" />

            </HBox>

            <HBox alignment="CENTER" spacing="25">

                <TextField prefWidth="400" />

                <Button onAction="#askQuestionButtonPressed" text="Ask Question" />

            </HBox>

        </VBox>

    </HBox>

    <ListView fx:id="questionsListView" maxHeight="Infinity" maxWidth="Infinity" prefHeight="229.0" prefWidth="922.0" />

    <Rectangle arcHeight="10" arcWidth="10" fill="snow" height="163.0" width="753.0" />

</VBox>
