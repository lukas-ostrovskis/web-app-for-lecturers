<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox id="staticGradientVBox" alignment="CENTER" prefWidth="1100.0" spacing="25" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.RoomViewController">
        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>


    <HBox   spacing="25">

        <VBox   spacing="25">

            <HBox spacing="25">

                <Label text="Room ID: (room ID here)" />

                <Button onAction="#leaveRoomButtonPressed" text="Leave Room" />

            </HBox>

            <Button onAction="#endLectureButtonPressed" text="End Lecture (for lecturers)" />

            <Label fx:id="indentityLabel" text="You're a (student / moderator / lecturer)" />

            <Label text="Lecture: (lecture title, e.g. CSE1200)" />

        </VBox>

        <VBox alignment="TOP_RIGHT" spacing="25">

            <HBox alignment="CENTER" spacing="25">

                <TextField fx:id="questionText" prefWidth="400">
               <HBox.margin>
                  <Insets top="-70.0" />
               </HBox.margin></TextField>

                <Button onAction="#askQuestionButtonPressed" text="Ask Question">
               <HBox.margin>
                  <Insets top="-70.0" />
               </HBox.margin></Button>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets left="80.0" top="140.0" />
            </padding>
            <VBox.margin>
               <Insets top="-50.0" />
            </VBox.margin>

            </HBox>
         <HBox.margin>
            <Insets left="160.0" />
         </HBox.margin>

        </VBox>

    </HBox>

    <ListView fx:id="questionsListView" editable="true" maxHeight="Infinity" maxWidth="Infinity" prefHeight="356.0" prefWidth="922.0" styleClass="listView" stylesheets="@../css/app.css">
      <VBox.margin>
         <Insets top="-50.0" />
      </VBox.margin></ListView>

    <Rectangle arcHeight="10" arcWidth="10" fill="snow" height="200" width="750" />

</VBox>
