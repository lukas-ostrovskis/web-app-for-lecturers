<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox id="staticGradientVBox" alignment="CENTER" prefWidth="1100.0" spacing="25" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.RoomViewController">
        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>


    <HBox spacing="25">

        <VBox spacing="25">

            <HBox spacing="25">

                <Label minWidth="60.0" text="Room ID:" />
            <Label fx:id="roomId" minWidth="70.0" text="Label">
               <HBox.margin>
                  <Insets left="-20.0" />
               </HBox.margin>
            </Label>

            </HBox>

            <Label fx:id="identityLabel" text="You're a (student / moderator / lecturer)">
            <VBox.margin>
               <Insets top="40.0" />
            </VBox.margin></Label>

            <Label text="Lecture: (lecture title, e.g. CSE1200)" />

        </VBox>

        <VBox alignment="TOP_RIGHT" spacing="25">

             <Button minWidth="100.0" onAction="#leaveRoomButtonPressed" text="Leave Room">
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Button>

            <Button fx:id="endLectureButton" onAction="#endLectureButtonPressed" text="End Lecture">
            <VBox.margin>
               <Insets right="110.0" top="-60.0" />
            </VBox.margin></Button>

            <HBox alignment="CENTER" spacing="25">

                <TextField fx:id="questionText" prefWidth="400">
               <HBox.margin>
                  <Insets top="-90.0" />
               </HBox.margin></TextField>

                <Button minWidth="120.0" onAction="#askQuestionButtonPressed" text="Ask Question">
               <HBox.margin>
                  <Insets top="-90.0" />
               </HBox.margin></Button>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets left="80.0" top="140.0" />
            </padding>
            <VBox.margin>
               <Insets />
            </VBox.margin>

            </HBox>
         <HBox.margin>
            <Insets left="160.0" />
         </HBox.margin>

        </VBox>

    </HBox>

    <ListView fx:id="questionsListView" editable="true" maxHeight="Infinity" maxWidth="Infinity" prefHeight="356.0" prefWidth="922.0" styleClass="listView" stylesheets="@../css/app.css">
      <VBox.margin>
         <Insets top="-50.0" />
      </VBox.margin></ListView>

    <Rectangle arcHeight="10" arcWidth="10" fill="snow" height="200" width="750" />

</VBox>
